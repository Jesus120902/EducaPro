@model EducaPro.Models.Curso

@{
    ViewData["Title"] = "Detalles del Curso";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="card shadow mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-4">Profesor:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Profesor)</dd>
            </dl>

            <div class="d-flex justify-content-between">
                @if (User.IsInRole("Profesor"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                }
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                @if (User.IsInRole("Estudiante"))
                {
                    <form asp-action="AddCurso" asp-controller="Carrito" method="post" style="display:inline;">
                        <input type="hidden" name="cursoId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
