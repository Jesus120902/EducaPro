@model IEnumerable<EducaPro.Models.Curso>

@{
    ViewData["Title"] = "Lista de Cursos";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    @if (User.IsInRole("Profesor"))
    {
        <div class="text-center mb-4">
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Curso</a>
        </div>
    }
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p><strong>Descripción:</strong> @item.Descripcion</p>
                        <p><strong>Profesor:</strong> @item.Profesor</p>
                        <div class="d-flex justify-content-between">
                            @if (User.IsInRole("Profesor"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            }
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalles</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
